<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_patient"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:paddingStart="50dp"
        android:paddingVertical="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Вася Пупкин" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sex_orientation"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/male"
        app:layout_constraintBottom_toBottomOf="@id/tv_patient"
        app:layout_constraintStart_toStartOf="@id/tv_patient"
        app:layout_constraintTop_toTopOf="@id/tv_patient" />

</androidx.constraintlayout.widget.ConstraintLayout>
